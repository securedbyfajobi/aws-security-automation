# AWS Security Automation Environment Variables
# Copy this file to .env and configure your values

# AWS Configuration
AWS_REGION=eu-west-2
AWS_PROFILE=default
AWS_ACCOUNT_ID=123456789012

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SMTP_USERNAME=security-automation@company.com
SMTP_PASSWORD=your-smtp-password
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-key

# Storage Configuration
REPORTS_BUCKET=aws-security-reports-bucket
LOGS_BUCKET=aws-security-logs-bucket

# Database Configuration (if using RDS for findings storage)
DB_HOST=security-db.cluster-xyz.us-east-1.rds.amazonaws.com
DB_NAME=security_automation
DB_USER=security_admin
DB_PASSWORD=your-db-password
DB_PORT=5432

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
API_KEY=your-api-key-for-external-services

# Monitoring Configuration
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# External Integrations
JIRA_URL=https://company.atlassian.net
JIRA_USERNAME=security-bot@company.com
JIRA_API_TOKEN=your-jira-api-token

SERVICENOW_URL=https://company.service-now.com
SERVICENOW_USERNAME=security_integration
SERVICENOW_PASSWORD=your-servicenow-password

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
MAX_WORKERS=5
TIMEOUT_SECONDS=300

# Feature Flags
ENABLE_AUTO_REMEDIATION=false
ENABLE_COST_OPTIMIZATION=true
ENABLE_COMPLIANCE_SCANNING=true
ENABLE_THREAT_INTELLIGENCE=true