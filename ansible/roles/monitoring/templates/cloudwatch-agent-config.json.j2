{
  "agent": {
    "metrics_collection_interval": {{ monitoring.collection_interval | default(60) }},
    "run_as_user": "cwagent"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/security-automation/app.log",
            "log_group_name": "/aws/security-automation/application",
            "log_stream_name": "{{ inventory_hostname }}-application",
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/security-automation/guardduty.log",
            "log_group_name": "/aws/security-automation/guardduty",
            "log_stream_name": "{{ inventory_hostname }}-guardduty",
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/security-automation/security-hub.log",
            "log_group_name": "/aws/security-automation/security-hub",
            "log_stream_name": "{{ inventory_hostname }}-security-hub",
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/audit/audit.log",
            "log_group_name": "/aws/security-automation/audit",
            "log_stream_name": "{{ inventory_hostname }}-audit",
            "timezone": "UTC"
          }
        ]
      }
    }
  },
  "metrics": {
    "namespace": "SecurityAutomation",
    "metrics_collected": {
      "cpu": {
        "measurement": [
          "cpu_usage_idle",
          "cpu_usage_iowait",
          "cpu_usage_user",
          "cpu_usage_system"
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "*"
        ],
        "totalcpu": false
      },
      "disk": {
        "measurement": [
          "used_percent"
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "*"
        ]
      },
      "diskio": {
        "measurement": [
          "io_time"
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "*"
        ]
      },
      "mem": {
        "measurement": [
          "mem_used_percent"
        ],
        "metrics_collection_interval": 60
      },
      "netstat": {
        "measurement": [
          "tcp_established",
          "tcp_time_wait"
        ],
        "metrics_collection_interval": 60
      },
      "swap": {
        "measurement": [
          "swap_used_percent"
        ],
        "metrics_collection_interval": 60
      }
    },
    "append_dimensions": {
      "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
      "ImageId": "${aws:ImageId}",
      "InstanceId": "${aws:InstanceId}",
      "InstanceType": "${aws:InstanceType}",
      "Environment": "{{ environment | default('production') }}"
    }
  }
}